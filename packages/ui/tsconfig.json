{
    "compilerOptions": {
      "outDir": "dist",
      "module": "ESNext",
      "target": "ESNext",
      "lib": ["DOM", "ESNext"],
      "jsx": "react-jsx",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*", "../stories/**/*", ".storybook/**/*", "index.ts"],
    "exclude": ["node_modules", "dist"]
  }